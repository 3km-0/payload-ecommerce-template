{
  "name": "payload-boilerplate",
  "version": "1.0.0",
  "description": "Website template for Payload",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation rm -rf .next && pnpm build && pnpm start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "ii": "cross-env NODE_OPTIONS=--no-deprecation pnpm --ignore-workspace install",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm pnpm-lock.yaml && pnpm --ignore-workspace install",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@payloadcms/db-mongodb": "3.13.0",
    "@payloadcms/live-preview-react": "3.13.0",
    "@payloadcms/next": "3.13.0",
    "@payloadcms/payload-cloud": "3.13.0",
    "@payloadcms/plugin-form-builder": "3.13.0",
    "@payloadcms/plugin-nested-docs": "3.13.0",
    "@payloadcms/plugin-redirects": "3.13.0",
    "@payloadcms/plugin-search": "3.13.0",
    "@payloadcms/plugin-seo": "3.13.0",
    "@payloadcms/richtext-lexical": "3.13.0",
    "@payloadcms/storage-s3": "^3.13.0",
    "@payloadcms/ui": "3.13.0",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "axios": "^1.7.9",
    "babel-plugin-react-compiler": "19.0.0-beta-55955c9-20241229",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "embla-carousel-auto-scroll": "^8.5.1",
    "embla-carousel-autoplay": "^8.5.1",
    "embla-carousel-react": "^8.5.1",
    "geist": "^1.3.1",
    "graphql": "^16.10.0",
    "lucide-react": "^0.469.0",
    "next": "^15.1.3",
    "next-sitemap": "^4.2.3",
    "payload": "3.13.0",
    "payload-admin-bar": "^1.0.6",
    "payloadcms-lexical-ext": "0.5.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "7.54.2",
    "sharp": "0.33.5",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/escape-html": "^1.0.4",
    "@types/node": "22.10.4",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "autoprefixer": "^10.4.20",
    "copyfiles": "^2.4.1",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.1.3",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "tailwindcss-scoped-preflight": "^3.4.10",
    "typescript": "5.7.2"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  }
}
